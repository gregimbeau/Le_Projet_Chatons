<section class= "bg-gray-50 dark:bg-gray-900">
  <div class="flex flex-col items-center justify-center px-6 py-6 ">
    <%= link_to root_path, class: "flex items-center mb-6 text-2xl font-semibold text-gray-900 dark:text-white" do %>
      <%= image_tag "http://lofrev.net/wp-content/photos/2014/09/Cat-logo.gif", alt: "logo", class: "w-8 h-8 mr-2" %>
      Projet Chatons     
    <% end %>
    <div class="w-full bg-white rounded-lg shadow dark:border md:mt-0 sm:max-w-md xl:p-0 dark:bg-gray-800 dark:border-gray-700">
      <div class="p-6 space-y-4 md:space-y-6 sm:p-8">
        <h1 class="text-xl font-bold leading-tight tracking-tight text-gray-900 md:text-2xl dark:text-white">
          Mettre à jour l'item
        </h1>
        <%= render "form", item: @item, html: { class: "space-y-4 md:space-y-6" } %>
        <div class="flex justify-between">
          <%= link_to "Montrer l'item", @item, class: "text-blue-600 hover:underline" %> 
          <%= link_to "Retour à la liste", items_path, class: "text-blue-600 hover:underline" %>
        </div>
      </div>
    </div>
  </div>
</section>
